{
    "name": "bookshop-nodejs",
    "description": "Generated by cds init",
    "repository": "https://github.com/gregorwolf/bookshop-nodejs",
    "license": "Apache 2.0",
    "version": "1.0.0",
    "engines": {
        "node": "^8.9"
    },
    "files": [
        "db",
        "srv"
    ],
    "dependencies": {
        "@sap/cds": "3.31.2",
        "@sap/cds-odata-v2-adapter-proxy": "^1.4.21",
        "@sap/hana-client": "^2.4.182",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^3.21.3",
        "passport": "^0.4.1"
    },
    "devDependencies": {
        "sqlite3": "^4.1.1"
    },
    "scripts": {
        "start": "cds run",
        "startv2": "node v2server",
        "start:local": "cds run --with-mocks",
        "watch": "cds watch",
        "build": "cds build/all --clean",
        "build:cf": "mbt build -p=cf",
        "build:xs-security": "cds compile srv/ --to xsuaa  > xs-security.json",
        "deploy": "cds deploy",
        "deploy:cf": "cf deploy mta_archives/bookshop-nodejs_0.0.1.mtar"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "bookshop.db"
                },
                "[production]": {
                    "kind": "hana"
                }
            }
        },
        "odata": {
            "version": "v4"
        }
    }
}
