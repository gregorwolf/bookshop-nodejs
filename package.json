{
    "name": "bookshop-nodejs",
    "description": "Generated by cds init",
    "repository": "https://github.com/gregorwolf/bookshop-nodejs",
    "license": "Apache 2.0",
    "version": "1.0.0",
    "engines": {
        "node": "^8.9"
    },
    "files": [
        "db",
        "srv"
    ],
    "dependencies": {
        "@sap/cds": "^3.20.0",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "hdb": "^0.17.1",
        "helmet": "^3.21.2",
        "passport": "^0.4.0"
    },
    "devDependencies": {
        "sqlite3": "^4.1.0"
    },
    "scripts": {
        "start": "cds run",
        "start:local": "cds run --with-mocks",
        "watch": "cds watch",
        "build": "cds build/all --clean",
        "build:security": "cds compile srv/ --to xsuaa  > xs-security.json",
        "deploy": "cds deploy"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "bookshop.db"
                },
                "[production]": {
                    "kind": "hana"
                }
            }
        },
        "odata": {
            "version": "v4"
        }
    }
}
